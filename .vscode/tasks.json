{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "yarn",
      "identifier": "install",
      "label": "Install dependencies",
      "args": ["--pure-lockfile"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "identifier": "build",
      "label": "Build scripts",
      "problemMatcher": [
        "$tsc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
